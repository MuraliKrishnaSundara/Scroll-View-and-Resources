<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <EditText
            style="@style/customEditText"
            android:background="@drawable/edit_text_bg"
            android:padding="@dimen/dp_20"
            android:hint="@string/enter_the_name_hint"/>

        <EditText
            style="@style/customEditText"
            android:hint="@string/enter_the_id_hint"/>

        <EditText
            style="@style/customEditText"
            android:hint="@string/enter_the_date_of_birth_hint"/>

        <EditText
            style="@style/customEditText"
            android:hint="@string/enter_blood_group_hint"/>

        <EditText
            style="@style/customEditText"
            android:hint="@string/enter_phone_number_hint"/>

        <EditText
            style="@style/customEditText"
            android:hint="@string/enter_state_hint"/>

        <EditText
            style="@style/customEditText"
            android:hint="@string/enter_district_hint"/>

        <EditText
            style="@style/customEditText"
            android:hint="@string/enter_address_hint"/>

    </LinearLayout>

</ScrollView>