<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_50"
        android:text="@string/schedule_meeting"
        android:textColor="#C4C4CC"
        android:textSize="@dimen/dimen_20" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="@string/name"
        android:textColor="#C4C4CC"
        android:textSize="@dimen/dimen_14_sp" />

    <EditText
        android:id="@+id/etName"
        style="@style/customEditText2"
        android:layout_below="@id/tvName"
        android:layout_marginTop="@dimen/dimen_10"
        android:hint="@string/enter_name"
        android:text="@string/nrupul_dev" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/customEditText3"
        android:layout_below="@id/etName"
        android:layout_marginLeft="@dimen/dimen_35"
        android:text="@string/tue_22_december_2020" />

    <TextView
        android:id="@+id/tvTime"
        style="@style/customEditText3"
        android:layout_below="@id/etName"
        android:layout_marginLeft="@dimen/dimen_65"
        android:layout_toRightOf="@id/tvDate"
        android:text="@string/_11_30am" />

    <TextView
        android:id="@+id/tvInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate"
        android:layout_marginLeft="@dimen/dimen"
        android:layout_marginTop="@dimen/dimen_35"
        android:text="@string/people_to_invite"
        android:textColor="#C4C4C4"
        android:textSize="@dimen/dimen_14_sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etName2"
        style="@style/customEditText2"
        android:layout_below="@id/tvInvite"
        android:layout_marginTop="@dimen/dimen_5"
        android:drawableRight="@drawable/search"
        android:hint="@string/enter_name"
        android:text="@string/prateek" />

    <ImageView
        android:id="@+id/ivImage1"
        style="@style/customEditText4"
        android:layout_below="@id/etName2"
        android:layout_marginLeft="@dimen/dimen_25"
        android:src="@drawable/prateek_sukla" />

    <ImageView
        android:id="@+id/ivImage2"
        style="@style/customEditText4"
        android:layout_below="@id/etName2"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_toRightOf="@id/ivImage1"
        android:src="@drawable/jeff_bezos" />

    <View
        android:id="@+id/vBG1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_130"
        android:layout_below="@id/ivImage1"
        android:layout_marginTop="@dimen/dimen_35"
        android:background="#FAFAFA" />

    <TextView
        android:id="@+id/tvInviteName1"
        style="@style/customEditText1"
        android:layout_alignTop="@id/vBG1"
        android:layout_marginTop="@dimen/dimen_35"
        android:drawableLeft="@drawable/prateek_sukla_small"
        android:drawableRight="@drawable/blue_check"
        android:text="@string/prateek_shukla" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvInviteName1"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="#C4C4C4" />

    <TextView
        android:id="@+id/tvInviteName2"
        style="@style/customEditText1"
        android:layout_below="@id/tvInviteName1"
        android:layout_marginTop="@dimen/dimen_30"
        android:drawableLeft="@drawable/jeff_bezos_small"
        android:text="@string/jeff_bezos" />

    <TextView
        android:id="@+id/tvNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_25"
        android:drawableRight="@drawable/slack_icon"
        android:drawablePadding="@dimen/dimen_10"
        android:text="@string/notify_people_on_slack"
        android:textColor="#000000"
        android:textSize="@dimen/dimen_14_sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_55"
        android:layout_marginRight="@dimen/dimen_55"
        android:layout_marginBottom="@dimen/dimen_40"
        android:background="#8095FF"
        android:text="@string/create_meeting" />

</RelativeLayout>